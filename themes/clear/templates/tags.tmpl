## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>
<%block name="content">
<!--    <h1>${title}</h1> -->
    % if cat_items:
    <div class="postbox indexbox">
        <h2>${messages("Categories")}</h2>
        <ul class="unstyled bricks">
        % for text, link in cat_items:
            % if text:
                <li><h3><a class="reference" href="${link}">${text}</a></h3></li>
            % endif
        % endfor
        </ul>
    </div>
    % endif
    % if items:
    <div class="indexbox">
        <h2>${messages("Tags")}</h2>
        <ul class="unstyled bricks">
        % for text, link in items:
            <li><a class="tag reference" href="${link}">${text}</a></li>
        % endfor
        </ul>
    </div>
    % endif
</%block>
