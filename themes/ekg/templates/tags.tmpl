## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>
<%block name="content">
    % if cat_items:
    <div class="postbox indexbox">
        <div class="post-title">
            <h2>${messages("Categories")}</h2>
            <ul class="unstyled">
            % for text, link in cat_items:
                % if text:
                    <li><h3><a class="reference" href="${link}">${text}</a></h3></li>
                % endif
            % endfor
            </ul>
        </div>
    </div>
    % endif
    % if items:
    <div class="indexbox">
        <div class="post-title">
            <h2>${messages("Tags")}</h2>
            <p class="tags">
            % for text, link in items:
                <a class="tag reference" href="${link}">${text}</a>
            % endfor
            </p>
            </ul>
        </div>
    </div>
    % endif
</%block>
